{
  "name": "@convivio/testing",
  "version": "0.0.0",
  "description": "Build, Test, and Deploy AWS Lambda-based serverless autonomous services.",
  "keywords": [
    "serverless",
    "plugin",
    "aws",
    "lambda",
    "offline",
    "vcr",
    "build",
    "test",
    "deploy"
  ],
  "author": "John Gilbert",
  "license": "ISC",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "compile": "babel src --out-dir lib",
    "clean": "rm -rf .nyc_output/ lib/ coverage/",
    "lint": "npm run lint:js",
    "lint:js": "eslint --fix --format=node_modules/eslint-formatter-pretty .",
    "lint:staged": "lint-staged",
    "pretest": "npm run clean && npm run lint",
    "test": "better-npm-run test",
    "prepublishOnly": "npm run build"
  },
  "betterScripts": {
    "test": {
      "command": "nyc mocha --recursive \"./test/unit/**/*.test.js\"",
      "env": {
        "AWS_REGION": "us-west-2",
        "NODE_ENV": "test"
      }
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "pre-commit": "lint:staged",
  "devDependencies": {
    "@babel/cli": "^7.10.0",
    "@babel/core": "^7.10.0",
    "@babel/plugin-transform-runtime": "^7.10.0",
    "@babel/preset-env": "^7.10.0",
    "@babel/register": "^7.10.0",
    "@babel/runtime": "^7.10.0",
    "babel-eslint": "^10.0.0",
    "babel-plugin-istanbul": "^5.2.0",
    "better-npm-run": "^0.1.1",
    "chai": "^4.2.0",
    "eslint": "^6.7.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-import": "^2.18.2",
    "lint-staged": "^9.4.3",
    "mocha": "^10.2.0",
    "nock": "^13.5.4",
    "nyc": "^14.1.1",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.450.0",
    "@babel/runtime": "^7.0.0",
    "@smithy/node-http-handler": "^2.1.9",
    "@smithy/util-retry": "^2.1.1",
    "bluebird": "^3.7.1",
    "debug": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.15"
  }
}
